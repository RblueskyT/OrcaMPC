<main>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="container">
        <div class="card white">
            <h3 style="padding-top: 35px;" class="light-blue-text text-darken-2 center"><i class="fas fa-edit"></i>
                Survey Editor</h3><br />
            <div class="divider"></div>
            <div class="card-content">
                <div class="col s12">
                    <p><span class="red-text"><strong>All</strong></span> fields are required</p><br />
                </div>
                <div class="edit_form">
                    <form id="survey_edit" action="/users/surveys/unpublished/edit" method="POST">
                        <input type="hidden" id="surveyid" name="surveyid" value={{survey._id}} required>
                        <div class="input-field">
                            <input placeholder="Maximum 200 characters and no special characters (e.g. @, # and $)"
                                type="text" id="surveyTitle" name="surveyTitle" onblur="checkTitle()"
                                onfocus="checkTitle()" onchange="checkTitle()" class="validate" data-length="200"
                                value="{{survey.surveyTitle}}" required>
                            <label for="surveyTitle">Survey Title</label>
                            <span class="helper-text" data-error="Please fill in this field or check your format"
                                data-success="Format correct"></span>
                        </div><br />
                        <div class="input-field">
                            <textarea placeholder="At least 50 characters" id="description" name="description"
                                onblur="checkDes()" onfocus="checkDes()" onchange="checkDes()"
                                class="materialize-textarea validate" required>{{survey.description}}</textarea>
                            <label for="description">Survey Description</label>
                            <span class="helper-text" data-error="Please fill in this field or check your format"
                                data-success="Input completed"></span>
                        </div><br />
                        <div class="input-field">
                            <input placeholder="Please select the date here ..." type="text" id="estimatedDate"
                                name="estimatedDate" class="datepicker validate" value="{{survey.estimatedDate}}"
                                required>
                            <label for="estimatedDate">Estimated Survey Date</label>
                            <span class="helper-text" data-error="Please select the date"
                                data-success="Date selected"></span>
                        </div><br /><br />
                        <div class="input-field">
                            <input placeholder="Please select the time here ..." type="text" id="estimatedTime"
                                name="estimatedTime" class="timepicker validate" value="{{survey.estimatedTime}}"
                                required>
                            <label for="estimatedTime">Estimated Survey Time</label>
                            <span class="helper-text" data-error="Please select the time"
                                data-success="Time selected"></span>
                        </div><br />
                        <p><span class="red-text"><strong>Your previous selection:
                                </strong></span>{{survey.estimatedDuration}} Minutes</p><br />
                        <div class="input-field">
                            <select id="estimatedDuration" name="estimatedDuration" required>
                                <option value="" disabled selected>Please select here ...</option>
                                <option value="15">15 Minutes</option>
                                <option value="30">30 Minutes</option>
                                <option value="45">45 Minutes</option>
                                <option value="60">60 Minutes</option>
                            </select>
                            <label for="estimatedDuration">Estimated Survey Duration</label>
                        </div><br /><br /><br />
                        <div class="input-field">
                            <input placeholder="A number between 3 - 50" type="text" id="partyCount" name="partyCount"
                                onblur="checkCount()" onfocus="checkCount()" onchange="checkCount()" class="validate"
                                value="{{survey.partyCount}}" required>
                            <label for="partyCount">Expected Number of Participants</label>
                            <span class="helper-text" data-error="Please fill in this field or check your format"
                                data-success="Format correct"></span>
                        </div><br />
                        <p><span class="red-text"><strong>Your previous selection:
                                </strong></span>
                            {{#ifEquals survey.pattern "Participate"}}Participant Pattern{{/ifEquals}}
                            {{#ifEquals survey.pattern "Collect"}}Collect Pattern{{/ifEquals}}</p><br />
                        <div class="input-field">
                            <select id="pattern" name="pattern" required>
                                <option value="" disabled selected>Please select here ...</option>
                                <option value="Participate">Participant Pattern (participate in the survey filling and collect information from all participants)</option>
                                <option value="Collect">Collector Pattern (only collect information from other participants)</option>
                            </select>
                            <label for="pattern">Survey Pattern</label>
                        </div><br /><br />
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row center">
                            <div class="col s6">
                                <a href="#modal1" id="cancel-button"
                                    class="waves-effect waves-light blue lighten-1 btn modal-trigger"><strong>Cancel</strong></a>
                            </div>
                            <div class="col s6">
                                <a href="#modal2" id="survey-update-button"
                                    class="waves-effect waves-light blue lighten-1 btn modal-trigger"><strong>Update</strong></a>
                            </div>
                            <div id="modal1" class="modal">
                                <div class="modal-content">
                                    <h4 class="light-blue-text text-darken-2 center">Cancel Edit</h4><br />
                                    <h6 class="light-blue-text text-darken-2 center"><strong>Are you sure to cancel this
                                            edit? Please be informed that your work won't be saved.</strong></h6>
                                </div>
                                <div class="divider"></div>
                                <div class="modal-footer">
                                    <div class="col s6">
                                        <a href="#"
                                            class="modal-close waves-effect waves-red btn-flat"><strong>No</strong></a>
                                    </div>
                                    <div class="col s6">
                                        <a href="/users/surveys/unpublished"
                                            class="modal-close waves-effect waves-green btn-flat"><strong>Yes</strong></a>
                                    </div>
                                </div>
                            </div>
                            <div id="modal2" class="modal">
                                <div class="modal-content">
                                    <h4 class="light-blue-text text-darken-2 center">Confirm Edit</h4><br />
                                    <h6 class="light-blue-text text-darken-2 center"><strong>Are you sure to update this
                                            survey? Please confirm it again.</strong></h6>
                                </div>
                                <div class="divider"></div>
                                <div class="modal-footer">
                                    <div class="col s6">
                                        <a href="#"
                                            class="modal-close waves-effect waves-red btn-flat"><strong>No</strong></a>
                                    </div>
                                    <div class="col s6">
                                        <button class="modal-close waves-effect waves-green btn-flat"
                                            id="survey-update-submit" type="submit"><strong>Yes</strong></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row col s12">
                        <!-- Add a blank line -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
</main>