<main>
    <div class="container">
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="user_voting row z-depth-1">
            <div class="white">
                <h3 class="center pink-text text-darken-2" style="padding-top: 35px;"><i class="fas fa-book"></i>&nbsp;
                    Question Bank</h3><br />
                <div class="message_area" style="margin-left: 10px; margin-right: 10px;">
                    {{#if flash_success_message}}
                    <div class="success_msg">
                        <span class="closebtn-s" onclick="this.parentElement.style.display='none';">&times;</span>
                        {{flash_success_message}}
                    </div>
                    {{/if}}
                    {{#if flash_error_message}}
                    <div class="error_msg">
                        <span class="closebtn-e" onclick="this.parentElement.style.display='none';">&times;</span>
                        {{flash_error_message}}
                    </div>
                    {{/if}}
                </div>
                <div class="divider"></div>
            </div>
            <ul id="voting-tab" class="tabs tabs-fixed-width">
                <li class="tab"><a class="active" href="#radios"><span
                            class="pink-text text-darken-2"><strong>Single-Select</strong></span></a></li>
                <li class="tab"><a href="#checkboxes"><span
                            class="indigo-text text-darken-2"><strong>Multi-Select</strong></span></a></li>
                <li class="tab"><a href="#inputs"><span class="teal-text text-darken-2"><strong>Fill In the
                                Blank</strong></span></a></li>
            </ul>
            <div id="radios" class="col s12 pink lighten-5">
                <div class="singleChoice">
                    <div class="row">
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        {{#if myQuestions1}}
                        {{#each myQuestions1}}
                        <div class="col s12 m4">
                            <div class="card grey lighten-5 hoverable">
                                <div class="card-content">
                                    <span class="center card-title pink-text text-darken-2"><strong>{{truncate
                                            questionName
                                            32}}</strong></span><br />
                                    <p><i class="far fa-calendar-check"></i> &nbsp;{{formatDate createTime 'MMMM Do
                                        YYYY,
                                        h:mm:ss a'}}</p><br />
                                    <p style="text-align:justify"><strong>Description: </strong>{{truncate description
                                        95}}
                                    </p>
                                </div>
                                <div class="card-action">
                                    <div class="left"><a href="/users/surveys/question/edit/{{_id}}"><strong><i
                                                    class="far fa-edit"></i>
                                                Edit</strong></a></div>
                                    <div class="right"><a href="/users/surveys/question/view/{{_id}}"><strong><i
                                                    class="far fa-file-alt"></i> View</strong></a></div>
                                </div><br />
                            </div>
                        </div>
                        {{/each}}

                        {{else}}
                        <p class="center">Please use &nbsp;<a href="/users/surveys/question/create"><span
                                    class="light-blue-text text-darken-1"><i class="fas fa-pen-fancy"></i> Question
                                    Creator</span></a>&nbsp; to create a single choice question</p>
                        <br />
                        {{/if}}
                    </div>
                </div>
            </div>
            <div id="checkboxes" class="col s12 indigo lighten-5">
                <div class="multipleChoices">
                    <div class="row">
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        {{#if myQuestions2}}
                        {{#each myQuestions2}}
                        <div class="col s12 m4">
                            <div class="card grey lighten-5 hoverable">
                                <div class="card-content">
                                    <span class="center card-title indigo-text text-darken-2"><strong>{{truncate
                                            questionName
                                            32}}</strong></span><br />
                                    <p><i class="far fa-calendar-check"></i> &nbsp;{{formatDate createTime 'MMMM Do
                                        YYYY,
                                        h:mm:ss a'}}</p><br />
                                    <p style="text-align:justify"><strong>Description: </strong>{{truncate description
                                        95}}
                                    </p>
                                </div>
                                <div class="card-action">
                                    <div class="left"><a href="/users/surveys/question/edit/{{_id}}"><strong><i
                                                    class="far fa-edit"></i>
                                                Edit</strong></a></div>
                                    <div class="right"><a href="/users/surveys/question/view/{{_id}}"><strong><i
                                                    class="far fa-file-alt"></i> View</strong></a></div>
                                </div><br />
                            </div>
                        </div>
                        {{/each}}

                        {{else}}
                        <p class="center">Please use &nbsp;<a href="/users/surveys/question/create"><span
                                    class="light-blue-text text-darken-1"><i class="fas fa-pen-fancy"></i> Question
                                    Creator</span></a>&nbsp; to create a multiple choices question</p>
                        <br />
                        {{/if}}
                    </div>
                </div>
            </div>
            <div id="inputs" class="col s12 teal lighten-5">
                <div class="fillInBlank">
                    <div class="row">
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        {{#if myQuestions3}}
                        {{#each myQuestions3}}
                        <div class="col s12 m4">
                            <div class="card grey lighten-5 hoverable">
                                <div class="card-content">
                                    <span class="center card-title teal-text text-darken-2"><strong>{{truncate
                                            questionName
                                            32}}</strong></span><br />
                                    <p><i class="far fa-calendar-check"></i> &nbsp;{{formatDate createTime 'MMMM Do
                                        YYYY,
                                        h:mm:ss a'}}</p><br />
                                    <p style="text-align:justify"><strong>Description: </strong>{{truncate description
                                        95}}
                                    </p>
                                </div>
                                <div class="card-action">
                                    <div class="left"><a href="/users/surveys/question/edit/{{_id}}"><strong><i
                                                    class="far fa-edit"></i>
                                                Edit</strong></a></div>
                                    <div class="right"><a href="/users/surveys/question/view/{{_id}}"><strong><i
                                                    class="far fa-file-alt"></i> View</strong></a></div>
                                </div><br />
                            </div>
                        </div>
                        {{/each}}

                        {{else}}
                        <p class="center">Please use &nbsp;<a href="/users/surveys/question/create"><span
                                    class="light-blue-text text-darken-1"><i class="fas fa-pen-fancy"></i> Question
                                    Creator</span></a>&nbsp; to create a fill in the blank question</p>
                        <br />
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
    </div>
</main>