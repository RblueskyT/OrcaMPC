<main>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="container">
        <div class="card white">
            <h3 style="padding-top: 35px;" class="light-blue-text text-darken-2 center"><i class="fas fa-edit"></i>
                Voting Editor</h3><br />
            <div class="divider"></div>
            <div class="card-content">
                <div class="col s12">
                    <p><span class="red-text"><strong>All</strong></span> fields are required</p><br />
                </div>
                <div class="edit_form">
                    <form id="voting_edit" action="/users/voting/unpublished/edit" method="POST">
                        <input type="hidden" id="votingid" name="votingid" value={{voting._id}} required>
                        <div class="input-field">
                            <input placeholder="Maximum 200 characters and no special characters (e.g. @, # and $)"
                                type="text" id="votingTitle" name="votingTitle" onblur="checkTitle()"
                                onfocus="checkTitle()" onchange="checkTitle()" class="validate" data-length="200"
                                value="{{voting.votingTitle}}" required>
                            <label for="votingTitle">Voting Title</label>
                            <span class="helper-text" data-error="Please fill in this field or check your format"
                                data-success="Format correct"></span>
                        </div><br />
                        <div class="input-field">
                            <textarea placeholder="At least 50 characters" id="description" name="description"
                                onblur="checkDes()" onfocus="checkDes()" onchange="checkDes()"
                                class="materialize-textarea validate" required>{{voting.description}}</textarea>
                            <label for="description">Voting Description</label>
                            <span class="helper-text" data-error="Please fill in this field or check your format"
                                data-success="Input completed"></span>
                        </div><br />
                        <div class="input-field">
                            <input placeholder="Please select the date here ..." type="text" id="estimatedDate"
                                name="estimatedDate" class="datepicker validate" value="{{voting.estimatedDate}}"
                                required>
                            <label for="estimatedDate">Estimated Voting Date</label>
                            <span class="helper-text" data-error="Please select the date"
                                data-success="Date selected"></span>
                        </div><br /><br />
                        <div class="input-field">
                            <input placeholder="Please select the time here ..." type="text" id="estimatedTime"
                                name="estimatedTime" class="timepicker validate" value="{{voting.estimatedTime}}"
                                required>
                            <label for="estimatedTime">Estimated Voting Time</label>
                            <span class="helper-text" data-error="Please select the time"
                                data-success="Time selected"></span>
                        </div><br />
                        <p><span class="red-text"><strong>Your previous selection:
                                </strong></span>{{voting.estimatedDuration}} Minutes</p><br />
                        <div class="input-field">
                            <select id="estimatedDuration" name="estimatedDuration" required>
                                <option value="" disabled selected>Please select here ...</option>
                                <option value="15">15 Minutes</option>
                                <option value="30">30 Minutes</option>
                                <option value="45">45 Minutes</option>
                                <option value="60">60 Minutes</option>
                            </select>
                            <label for="estimatedDuration">Estimated Voting Duration</label>
                        </div><br /><br /><br />
                        <div class="input-field">
                            <input placeholder="A number between 2 - 50" type="text" id="partyCount" name="partyCount"
                                onblur="checkCount()" onfocus="checkCount()" onchange="checkCount()" class="validate"
                                value="{{voting.partyCount}}" required>
                            <label for="partyCount">Expected Number of Participants</label>
                            <span class="helper-text" data-error="Please fill in this field or check your format"
                                data-success="Format correct"></span>
                        </div><br />
                        <p><span class="red-text"><strong>Your previous options: </strong></span>
                            {{#each voting.options}}
                            {{serialNumber @index}}. {{this}}&nbsp;
                            {{/each}}
                        </p>
                        <div class="input-field">
                            <div class="valign-wrapper">
                                <div class="col s3">
                                    <label for="opNum">Number of Options</label>
                                    <input placeholder="Please enter a number between 2 - 10" type="text" id="opNum"
                                        name="opNum" onblur="checkNum()" onfocus="checkNum()" onchange="checkNum()"
                                        class="validate" required>
                                    <span class="helper-text" data-error="Please fill in the field or check your format"
                                        data-success="Format correct"></span>
                                </div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <div class="col s9">
                                    <a href="#" id="addOps" onclick="addOps()"
                                        class="btn waves-effect waves-light blue lighten-1 disabled"><strong>Add
                                            Options</strong></a>
                                </div>
                            </div><br /><br />
                            <div id="container" />
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row center">
                            <div class="col s6">
                                <a href="#modal1" id="cancel-button"
                                    class="waves-effect waves-light blue lighten-1 btn modal-trigger"><strong>Cancel</strong></a>
                            </div>
                            <div class="col s6">
                                <a href="#modal2" id="update-button"
                                    class="waves-effect waves-light blue lighten-1 btn modal-trigger"
                                    disabled><strong>Update</strong></a>
                            </div>
                            <div id="modal1" class="modal">
                                <div class="modal-content">
                                    <h4 class="light-blue-text text-darken-2 center">Cancel Edit</h4><br />
                                    <h6 class="light-blue-text text-darken-2 center"><strong>Are you sure to cancel this
                                            edit? Please be informed that your work won't be saved.</strong></h6>
                                </div>
                                <div class="divider"></div>
                                <div class="modal-footer">
                                    <div class="col s6">
                                        <a href="#"
                                            class="modal-close waves-effect waves-red btn-flat"><strong>No</strong></a>
                                    </div>
                                    <div class="col s6">
                                        <a href="/users/voting/unpublished"
                                            class="modal-close waves-effect waves-green btn-flat"><strong>Yes</strong></a>
                                    </div>
                                </div>
                            </div>
                            <div id="modal2" class="modal">
                                <div class="modal-content">
                                    <h4 class="light-blue-text text-darken-2 center">Confirm Edit</h4><br />
                                    <h6 class="light-blue-text text-darken-2 center"><strong>Are you sure to update this
                                            voting? Please confirm it again.</strong></h6>
                                </div>
                                <div class="divider"></div>
                                <div class="modal-footer">
                                    <div class="col s6">
                                        <a href="#"
                                            class="modal-close waves-effect waves-red btn-flat"><strong>No</strong></a>
                                    </div>
                                    <div class="col s6">
                                        <button class="modal-close waves-effect waves-green btn-flat" id="submit"
                                            type="submit"><strong>Yes</strong></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row col s12">
                        <!-- Add a blank line -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
</main>