<div class="container">
    <h3 class="center"></h3>
    <div class="row">
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="col s6 offset-s3">
            <div class="card grey lighten-5 hoverable">
                <div class="card-content">
                    <h3 class="center blue-text text-lighten-1">Log In</h3></br>
                    <div class="message_area row">
                        {{#if flash_success_message}}
                        <div class="success_msg">
                            <span class="closebtn-s" onclick="this.parentElement.style.display='none';">&times;</span>
                            {{flash_success_message}}
                        </div>
                        {{/if}}
                        {{#if flash_error_message}}
                        <div class="error_msg">
                            <span class="closebtn-e" onclick="this.parentElement.style.display='none';">&times;</span>
                            {{flash_error_message}}
                        </div>
                        {{/if}}
                    </div>
                    <form id="login" action="/login" method="POST">
                        <div class="col s12">
                            <p class="blue-text text-lighten-1">Please use <span class="red-text">Google Chrome, Firefox
                                    or Microsoft Edge</span> to access to services</p></br />
                        </div>
                        <div class="input-field col s12">
                            <input placeholder="Please enter here ..." type="email" id="email" name="email" required>
                            <label for="email">E-mail Address</label>
                        </div>
                        <div class="input-field col s12">
                            <input placeholder="Please enter here ..." type="password" data-length="100" id="password"
                                name="password" required>
                            <label for="password">Password</label>
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row center">
                            <div class="col s6">
                                <a href="/" id="cancel-button"
                                    class="btn waves-effect waves-light blue lighten-1"><strong>Cancel</strong></a>
                            </div>
                            <div class="col s6">
                                <button class="btn waves-effect waves-light blue lighten-1" id="submit"
                                    type="submit"><strong>Log In</strong></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
    </div>
</div>