<main>
    <div class="container">
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="user_voting row z-depth-1">
            <div class="white">
                <h3 class="center cyan-text text-darken-2" style="padding-top: 35px;"><i class="fas fa-users"></i>&nbsp;
                    My Groups</h3><br />
                <div class="message_area" style="margin-left: 10px; margin-right: 10px;">
                    {{#if flash_success_message}}
                    <div class="success_msg">
                        <span class="closebtn-s" onclick="this.parentElement.style.display='none';">&times;</span>
                        {{flash_success_message}}
                    </div>
                    {{/if}}
                    {{#if flash_error_message}}
                    <div class="error_msg">
                        <span class="closebtn-e" onclick="this.parentElement.style.display='none';">&times;</span>
                        {{flash_error_message}}
                    </div>
                    {{/if}}
                </div>
                <div class="divider"></div>
            </div>
            <ul id="voting-tab" class="tabs tabs-fixed-width">
                <li class="tab"><a class="active" href="#created-group"><span
                            class="purple-text text-darken-2"><strong>Created</strong></span></a></li>
                <li class="tab"><a href="#joined-group"><span
                            class="green-text text-darken-2"><strong>Joined</strong></span></a></li>
            </ul>
            <div id="created-group" class="col s12 cyan lighten-5">
                <div class="published-create">
                    <div class="row col s12">
                        <!-- Add a blank line -->
                    </div>
                    <div class="row">
                        {{#if myGroups1}}
                        {{#each myGroups1}}
                        <div class="col s12 m4">
                            <div class="card grey lighten-5 hoverable">
                                <div class="card-content">
                                    <span class="center card-title cyan-text text-darken-2"><strong>{{truncate
                                            groupName
                                            32}}</strong></span><br />
                                    <p><i class="far fa-calendar-check"></i> &nbsp;{{formatDate createTime 'MMMM Do
                                        YYYY,
                                        h:mm:ss a'}}</p><br />
                                    <p style="text-align:justify"><strong>Description: </strong>{{truncate description
                                        90}}
                                    </p>
                                </div>
                                <div class="card-action">
                                    <div class="left"><a href="/community/groups/edit/{{_id}}"><strong><i
                                                    class="far fa-edit"></i>
                                                Edit</strong></a></div>
                                    <div class="right"><a href="/community/groups/view/{{_id}}"><strong><i
                                                    class="far fa-file-alt"></i> View</strong></a></div>
                                </div><br />
                            </div>
                        </div>
                        {{/each}}

                        {{else}}
                        <p class="center">Please use &nbsp;<a href="/community/groups/create"><span
                                    class="light-blue-text text-darken-1"><i class="fas fa-edit"></i> Group
                                    Creator</span></a>&nbsp; to create a group</p><br />
                        {{/if}}
                    </div>
                </div>
            </div>
            <div id="joined-group" class="col s12 green lighten-5">
                <div class="published-register">
                    <div class="row col s12">
                        <!-- Add a blank line -->
                    </div>
                    <div class="row">
                        {{#if myGroups2}}
                        {{#each myGroups2}}
                        <div class="col s12 m4">
                            <div class="card grey lighten-5 hoverable">
                                <div class="card-content">
                                    <span class="center card-title cyan-text text-darken-2"><strong>{{truncate
                                            groupName
                                            32}}</strong></span><br />
                                    <p><i class="far fa-calendar-check"></i> &nbsp;{{formatDate createTime 'MMMM Do
                                        YYYY,
                                        h:mm:ss a'}}</p><br />
                                    <p style="text-align:justify"><strong>Description: </strong>{{truncate description
                                        90}}
                                    </p>
                                </div>
                                <div class="card-action">
                                    <div class="center"><a href="/community/groups/view/{{_id}}"><strong><i
                                                    class="far fa-file-alt"></i> View</strong></a></div>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                        {{else}}
                        <p class="center">You have not joined any group yet</p><br />
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
    </div>
</main>