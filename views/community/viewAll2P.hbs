<main>
    <div class="container">
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="user_voting row z-depth-1">
            <div class="white">
                <h3 class="center deep-purple-text text-darken-2" style="padding-top: 35px;"><i class="far fa-bookmark"></i>&nbsp;
                    My Topics</h3><br />
                <div class="message_area" style="margin-left: 10px; margin-right: 10px;">
                    {{#if flash_success_message}}
                    <div class="success_msg">
                        <span class="closebtn-s" onclick="this.parentElement.style.display='none';">&times;</span>
                        {{flash_success_message}}
                    </div>
                    {{/if}}
                    {{#if flash_error_message}}
                    <div class="error_msg">
                        <span class="closebtn-e" onclick="this.parentElement.style.display='none';">&times;</span>
                        {{flash_error_message}}
                    </div>
                    {{/if}}
                </div>
                <div class="divider"></div>
            </div>
            <ul id="topic-tab" class="tabs tabs-fixed-width">
                <li class="tab"><a class="active" href="#created-topic"><span
                            class="purple-text text-darken-2"><strong>Created</strong></span></a></li>
                <li class="tab"><a href="#following-topic"><span
                            class="green-text text-darken-2"><strong>Following</strong></span></a></li>
            </ul>
            <div id="created-topic" class="col s12 deep-purple lighten-5">
                <div class="topics-create">
                    <div class="row col s12">
                        <!-- Add a blank line -->
                    </div>
                    <div class="row">
                        {{#if myTopics1}}
                        {{#each myTopics1}}
                        <div class="col s12 m4">
                            <div class="card grey lighten-5 hoverable">
                                <div class="card-content">
                                    <span class="center card-title deep-purple-text text-darken-2"><strong>{{truncate
                                            topicName
                                            32}}</strong></span><br />
                                    <p><i class="far fa-calendar-check"></i> &nbsp;{{formatDate createTime 'MMMM Do
                                        YYYY,
                                        h:mm:ss a'}}</p><br />
                                    <p style="text-align:justify"><strong>Description: </strong>{{truncate description
                                        90}}
                                    </p>
                                </div>
                                <div class="card-action">
                                    <div class="left"><a href="/community/topics/edit/{{_id}}"><strong><i
                                                    class="far fa-edit"></i>
                                                Edit</strong></a></div>
                                    <div class="right"><a href="/community/topics/view/{{_id}}"><strong><i
                                                    class="far fa-file-alt"></i> View</strong></a></div>
                                </div><br />
                            </div>
                        </div>
                        {{/each}}

                        {{else}}
                        <p class="center">Please use &nbsp;<a href="/community/topics/create"><span
                                    class="light-blue-text text-darken-1"><i class="fas fa-edit"></i> Topic
                                    Creator</span></a>&nbsp; to create a topic</p><br />
                        {{/if}}
                    </div>
                </div>
            </div>
            <div id="following-topic" class="col s12 green lighten-5">
                <div class="topic-following">
                    <div class="row col s12">
                        <!-- Add a blank line -->
                    </div>
                    <div class="row">
                        {{#if myTopics2}}
                        {{#each myTopics2}}
                        <div class="col s12 m4">
                            <div class="card grey lighten-5 hoverable">
                                <div class="card-content">
                                    <span class="center card-title deep-purple-text text-darken-2"><strong>{{truncate
                                            topicName
                                            32}}</strong></span><br />
                                    <p><i class="far fa-calendar-check"></i> &nbsp;{{formatDate createTime 'MMMM Do
                                        YYYY,
                                        h:mm:ss a'}}</p><br />
                                    <p style="text-align:justify"><strong>Description: </strong>{{truncate description
                                        90}}
                                    </p>
                                </div>
                                <div class="card-action">
                                    <div class="center"><a href="/community/topics/view/{{_id}}"><strong><i
                                                    class="far fa-file-alt"></i> View</strong></a></div>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                        {{else}}
                        <p class="center">You have not followed any topics yet</p><br />
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
        <div class="row col s12">
            <!-- Add a blank line -->
        </div>
    </div>
</main>