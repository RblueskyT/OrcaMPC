<main>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="container">
        <div class="card white">
            <h3 style="padding-top: 35px;" class="light-blue-text text-darken-2 center"><i
                    class="fas fa-search"></i>&nbsp;
                Explore Topics</h3><br />
            <div class="message_area" style="margin-left: 10px; margin-right: 10px;">
                {{#if flash_success_message}}
                <div class="success_msg">
                    <span class="closebtn-s" onclick="this.parentElement.style.display='none';">&times;</span>
                    {{flash_success_message}}
                </div>
                {{/if}}
                {{#if flash_error_message}}
                <div class="error_msg">
                    <span class="closebtn-e" onclick="this.parentElement.style.display='none';">&times;</span>
                    {{flash_error_message}}
                </div>
                {{/if}}
            </div>
            <div class="divider"></div>
            <div class="card-content">
                <div class="row col s12">
                    <!-- Add a blank line -->
                </div>
                <div class="row">
                    <form id="topic_search" action="/community/topics/search" method="POST">
                        <div class="valign-wrapper">
                            <div class="input-field col s6 offset-s2">
                                <input placeholder="Please enter the keyword of topic name to search" type="text"
                                    id="topicName" name="topickeyword" data-length="200">
                            </div>
                            <div class="col s4">
                                <button class="waves-effect waves-light blue lighten-1 btn"
                                    type="submit"><strong>Search</strong></button>
                            </div>
                        </div>
                    </form>
                </div><br /><br />
                <div class="row">
                    <div class="col s12">
                        <p class="black-text">Number of Results: <strong>{{searchTopics.length}}</strong></p>
                        <br /><br />
                    </div><br /><br />
                    <div class="col s12">
                        <p class="grey-text text-darken-2 center"><strong>Search Results</strong></p><br /><br />
                        {{#if searchTopics}}
                        {{#each searchTopics}}
                        <div class="col s12 m4">
                            <div class="card grey lighten-5 hoverable">
                                <div class="card-content">
                                    <span class="center card-title deep-purple-text text-darken-2"><strong>{{truncate
                                            topicName
                                            32}}</strong></span><br />
                                    <p><i class="far fa-calendar-check"></i> &nbsp;{{formatDate createTime 'MMMM Do
                                        YYYY,
                                        h:mm:ss a'}}</p><br />
                                    <p style="text-align:justify"><strong>Description: </strong>{{truncate description
                                        90}}
                                    </p>
                                </div>
                                <div class="card-action">
                                    <div class="center"><a href="/community/topics/view/{{_id}}"><strong><i
                                                    class="far fa-file-alt"></i> View</strong></a></div>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                        {{else}}
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <p class="center">No search results</p><br />
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        <div class="row col s12">
                            <!-- Add a blank line -->
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
    <div class="row col s12">
        <!-- Add a blank line -->
    </div>
</main>